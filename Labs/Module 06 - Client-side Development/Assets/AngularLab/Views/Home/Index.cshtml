
<script src="~/lib/angular/angular.js"></script>
<script src="~/js/app.js"></script>
<script src="~/js/vehicleService.js"></script>
<script src="~/js/vehicleController.js"></script>

<div ng-app="app">
	<div ng-controller="vehicleController as vehicleCtl">
		<h1>Vehicles</h1>
		<table class="table table-striped" style="width:100%;">
			<thead>
				<tr>
					<th>Registration</th>
					<th>Manufacturer</th>
					<th>Model</th>
					<th>Colour</th>
					<th>Year</th>
				</tr>
			</thead>
			<tbody>
				<tr ng-repeat="vehicle in vehicleCtl.vehicles">
					<td>{{vehicle.registration}}</td>
					<td>{{vehicle.make}}</td>
					<td>{{vehicle.model}}</td>
					<td>{{vehicle.colour}}</td>
					<td>{{vehicle.year}}</td>
				</tr>
			</tbody>
		</table>

		<div class="btn-group pull-right ">
			<button class="btn btn-primary" ng-click="vehicleCtl.getCachedVehicles()"> Load from Service </button>
			<button class="btn btn-primary" ng-click="vehicleCtl.loadVehicles()"> Load from Web Service </button>
		</div>

		<div class="clearfix"></div>
	</div>
</div>
